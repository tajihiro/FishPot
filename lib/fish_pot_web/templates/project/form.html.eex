<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :project_name, class: "control-label" %>
    <%= text_input f, :project_name, class: "form-control" %>
    <%= error_tag f, :project_name %>
  </div>

  <div class="form-group">
    <%= label f, :overview, class: "control-label" %>
    <%= text_input f, :overview, class: "form-control" %>
    <%= error_tag f, :overview %>
  </div>

  <div class="form-group">
    <%= label f, :place, class: "control-label" %>
    <%= text_input f, :place, class: "form-control" %>
    <%= error_tag f, :place %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
